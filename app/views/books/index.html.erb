<h1>Books</h1>

<table class="table">
  <thead>
    <tr>
      <th>Title</th>
      <th>Author</th>
      <th>Genre</th>
      <th>ISBN</th>
      <th>Total Copies</th>
      <th>Actions</th>
    </tr>
  </thead>
  <tbody>
    <% @books.each do |book| %>
      <tr>
        <td><%= book.title %></td>
        <td><%= book.author %></td>
        <td><%= book.genre %></td>
        <td><%= book.isbn %></td>
        <td><%= book.total_copies %></td>
        <td>
          <%= link_to 'Show', book_path(book), class: 'btn btn-info' %>
          <% if current_user.librarian? %>
            <%= link_to 'Edit', edit_book_path(book), class: 'btn btn-warning' %>
            <%= link_to 'Delete', book_path(book), method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-danger' %>
          <% end %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<% if current_user.librarian? %>
  <%= link_to 'New Book', new_book_path, class: 'btn btn-primary' %>
<% end %>
